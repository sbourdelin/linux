/dts-v1/;
#include "hi3521a.dtsi"

/ {
	model = "RaySharp RS-DM-290E DVR Board";
	compatible = "hisilicon,hi3521a";

	aliases {
		serial0 = &uart0;
		serial1 = &uart1;
		serial2 = &uart2;
	};

	memory {
		device_type = "memory";
		reg = <0x80000000 0xf00000>;
	};
};

&hi_sfc {
	status = "okay";
	spi-nor@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <104000000>;
	};
};

&uart0 {
	status = "okay";
};

&dual_timer0 {
	status = "okay";
};
